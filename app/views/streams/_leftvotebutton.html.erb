  <% battle = local_assigns[:battle] %>
     <% if left_is_voted(battle) %>
         <%  left_vote_link_text = "fa fa-heart fa-2x"%>
     <% else %>
         <%  left_vote_link_text = "fa fa-heart-o fa-2x"%>
     <% end %>
     <% if left_is_voted(battle)%>
        <i class= "<%= "#{left_vote_link_text}"%>" aria-hidden="true" style="color:#00314f;"></i>

    <% elsif !right_is_voted(battle)%>
                <%= link_to vote_for_left_stream_path(@stream, :battle => battle.id), :method => :post,
                                               :remote => @remainBattles.count > 0 do %>
                        <i class= "<%= "#{left_vote_link_text}"%>" aria-hidden="true" style="color:#00314f;"></i>
                <% end %>    
    <% end %>