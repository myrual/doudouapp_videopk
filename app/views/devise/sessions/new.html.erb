<div class="login-page col-xs-10 col-xs-offset-1">
  <%#= render "common/flashes" %>
  <div>
    <h1 class="text-center">用户登录</h1>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <div class="">
        <%= f.input :email, label: "邮箱", required: false, autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="">
        <%= f.input :password, label: "密码", required: false %>
      </div>
    </div>
    <div class="form-group">
      <div class="">
        <%= f.input :remember_me, label: "记住密码", as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>

    <div class="form-group">
      <%= f.button :submit, "登录", class: "btn",:style => "border: none;color:white;width:48%;background-color:#e02622;" %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
