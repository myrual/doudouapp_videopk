<div class="container-fluid">
<div class="row">
    <%= link_to "回到" + @topic.t1topic.title, openbattle_path(@topic.t1topic) %>
  </div>
  <div class="row text-center">
     <h4>话题：<%= @topic.title %></h4>
  </div>
</div>

<% if @currentvideo %>
  <div class="row col-sm-12 col-xs-12">
       <%= @currentvideo.user.name %>: <%= @currentvideo.title %>
  </div>
  
  <div class="row col-sm-12 col-xs-12 video_container">
    <% if @currentvideo %>
      <%= render :partial => "common/video_player", locals: {video: @currentvideo}%>
    <% end %>
  </div>
    <span></span>
    <div class="row col-sm-12 col-xs-12 text-center challenge_in_topic">
              <%= link_to("怼TA", myasset_video_challenge_path(@currentvideo), :class => "btn btn-primary btn-challenge") %>
    </div>
<% else %>
    <div class="row col-xs-12 text-center">
                <%= link_to myasset_topic_newvideo_path(@topic), :data => {:trackevent => "create_video_topic"} do %>
                           等你来说 <i class= "fa fa-video-camera fa-2x" aria-hidden="true"></i>
                <% end %>
		</div>
<% end %>
<%= render "footer" %>
</div>