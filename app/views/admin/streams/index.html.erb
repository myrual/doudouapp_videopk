<p id="notice"><%= notice %></p>

<h1>Streams</h1>
<%= link_to 'New Stream', new_admin_stream_path %>
  <div ><h2>待审批</h2></div>
  <div>
  <% @streams_waiting_prove.each do |stream| %>
    <div class="row" style="margin-bottom: 20px;">

      <div class="col-xs-2">
        <% if stream.approved %>
          <%= link_to rollback_admin_stream_path(stream), :method => :post, :class => "btn btn-xs btn-success" do %>
          <i class="fa fa-eye"></i><% end %>
        <% else %>
          <%= link_to approve_admin_stream_path(stream), :method => :post, :class => "btn btn-xs btn-warning" do %>
          <i class="fa fa-eye-slash"></i><% end %>
        <% end %>
      </div>
      <div class="col-xs-6">
        <%= link_to stream.title, admin_stream_path(stream) %>
      </div>
      <div class="pull-right col-sm-4 col-xs-4">
          <% if stream.approved %>
            <%= link_to 'Show', stream_path(stream) %>
          <% else %>
            <%= link_to 'Show', admin_stream_path(stream) %>
          <% end %>
          <%= link_to 'Edit', edit_admin_stream_path(stream) %>
          <%= link_to 'Destroy', admin_stream_path(stream),  method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
    <% end %>
  </div>
  <div ><h2>已经审批</h2></div>
  <div>
  <% @streams_proved.each do |stream| %>
    <div class="row" style="margin-bottom: 20px;">

      <div class="col-xs-2">
        <% if stream.approved %>
          <%= link_to rollback_admin_stream_path(stream), :method => :post, :class => "btn btn-xs btn-success" do %>
          <i class="fa fa-eye"></i><% end %>
        <% else %>
          <%= link_to approve_admin_stream_path(stream), :method => :post, :class => "btn btn-xs btn-warning" do %>
          <i class="fa fa-eye-slash"></i><% end %>
        <% end %>
      </div>
      <div class="col-xs-6">
        <%= link_to stream.title, admin_stream_path(stream) %>
      </div>
      <div class="pull-right col-sm-4 col-xs-4">
          <% if stream.approved %>
            <%= link_to 'Show', stream_path(stream) %>
          <% else %>
            <%= link_to 'Show', admin_stream_path(stream) %>
          <% end %>
          <%= link_to 'Edit', edit_admin_stream_path(stream) %>
          <%= link_to 'Destroy', admin_stream_path(stream),  method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>

  <% end %>
  </div>
