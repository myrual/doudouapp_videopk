<p id="notice"><%= notice %></p>

<h1>Topics</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Running</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.title %></td>
        <td><%= topic.running %></td>
        <td><%= topic.order %></td>
        <td><%= link_to 'Show', admin_topic_path(topic) %></td>
        <td><%= link_to 'Edit', edit_admin_topic_path(topic) %></td>
        <td><%= link_to 'Destroy', admin_topic_path(topic), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Topic', new_admin_topic_path %>
