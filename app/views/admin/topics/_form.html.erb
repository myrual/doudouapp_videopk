<%= simple_form_for [:admin, @topic] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :running %>
    <%= f.input :order %>
      <%= f.input :t1topic_id, :label => "总话题", :collection => T1topic.all.map{ |x| [x.title, x.id] },  :prompt => ""  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
