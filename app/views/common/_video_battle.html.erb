<% battle = local_assigns[:battle] %>
<% left_video = Video.find(battle.left_video_id) %>
<% right_video = Video.find(battle.right_video_id) %>
  <div class="row ">


    <div class="col-sm-6 col-xs-6">
      <%= video_tag([left_video.video_url.to_s],  :poster => left_video.image_url, :controls =>true) %>  
    </div>
    <div class="col-sm-6 col-xs-6">
      <%= video_tag([right_video.video_url.to_s],  :poster => right_video.image_url, :controls =>true) %>  
    </div>
  </div>