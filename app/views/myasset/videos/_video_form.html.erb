<div class="form-group">
    <%= simple_form_for [:myasset, @video] do |f| %>
    <div class="group">
        <%= f.input :title, :label => "我的视频名称" %>
    </div>
    <div class="group">
        <%= f.input :description, :label => "视频介绍" %>
    </div>
    <% if @video.image.present? %>
    <span>视频封面</span>
    <br>
    <%= image_tag(@video.image.thumb.url) %>
    <% end %>
    <div class="group">
        <%=f.file_field :video, :accept => 'video/*', :capture => "camera", :class => "filestyle", "data-buttonText" =>"录制挑战视频", "data-icon"=>"false"%>

    </div>
    <div class="group">
          <%= f.file_field :image, :accept => 'image/*', :capture => "camera", :class => "filestyle", "data-buttonText" =>"添加封面照片", "data-icon"=>"false" %>
    </div>
    <br>
    <div class="form-actions">
      <%= f.submit "提交" , disable_with: "Submiting...", class: "btn btn-success", :style => "border: none;color:white;width:49%;background-color:#e02622;" %>
      <%= link_to "取消", myasset_videos_path, class: "btn btn-default", :style => "border: none;color:white;width:49%;background-color:#e02622;"%>
    </div>
</div>
<% end %>
